---
import BookCallButton from "./BookCallButton.astro"
import MultiSelect from "./MultiSelect.astro"
import RangeSlider from "./RangeSlider.astro"

const servicesOptions = [
    "Web Design",
    "Web Development",
    "Branding & Logo Design",
    "App Development",
    "Motion Graphics",
    "Graphic Design",
]
---

<section id="contact" class="px-4 mb-[60px] mt-20">
    <div
        class="flex max-md:flex-col md:gap-x-6 lg:gap-x-14 xl:gap-x-20 max-w-[1348px] mx-auto bg-gradient-to-br from-[#BBC6FF1A] to-[#BBC6FF00] from-0% to-100% rounded-[60px] overflow-hidden"
    >
        <div
            class="basis-1/2 bg-[url('/logo-bg.webp')] bg-no-repeat bg-[left_top_35px] bg-contain pl-4 md:pl-7 lg:pl-14 xl:pl-20 py-4 md:py-6 lg:py-12 xl:py-16"
        >
            <div class="mt-[125px]">
                <h2
                    class="font-neuropolitcal text-[54px] md:text-[64px] lg:text-[74px] xl:text-[84px] text-white leading-[100px]"
                >
                    Wanna work with us?
                </h2>
                <div class="bg-[#000102] py-8 px-5 md:px-6 lg:px-9 w-5/6  md:w-5/6 lg:w-3/4 xl:w-2/3 rounded-[30px] mt-11">
                    <p class="text-white text-base mb-[50px]">
                        Let's discuss about your project directly on meeting!
                    </p>
                    <div class="flex">
                        <BookCallButton />
                    </div>
                </div>
                <!-- <span class="text-base text-white mt-4"
                    >We respond to inquiries within 24 hours.</span
                > -->
            </div>
        </div>
        <div
            class="basis-1/2 pr-4 max-md:pl-4 md:pr-7 lg:pr-14 xl:pr-20 py-4 md:py-6 lg:py-12 xl:py-16"
        >
            <form onsubmit="">
                <div class="">
                    <label for="name" class="block text-sm text-[#747785] mb-2"
                        >Name</label
                    >
                    <input
                        type="text"
                        id="name"
                        class="text-white text-[18px] py-5 px-6 block w-full bg-transparent border border-white border-opacity-10 rounded-2xl focus:border-primary focus:ring-primary focus:ring-2 disabled:opacity-50 disabled:pointer-events-none outline-none leading-7"
                        placeholder="Joe Doe"
                    />
                </div>
                <div class="mt-[18px]">
                    <label for="email" class="block text-sm text-[#747785] mb-2"
                        >Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        class="text-white text-[18px] py-5 px-6 block w-full bg-transparent border border-white border-opacity-10 rounded-2xl focus:border-primary focus:ring-primary focus:ring-2 disabled:opacity-50 disabled:pointer-events-none outline-none leading-7"
                        placeholder="wowemail@gmail.com"
                    />
                </div>
                <div class="mt-[18px]">
                    <label
                        for="project-name"
                        class="block text-sm text-[#747785] mb-2"
                        >Project Name</label
                    >
                    <input
                        type="text"
                        id="project-name"
                        class="text-white text-[18px] py-5 px-6 block w-full bg-transparent border border-white border-opacity-10 rounded-2xl focus:border-primary focus:ring-primary focus:ring-2 disabled:opacity-50 disabled:pointer-events-none outline-none leading-7"
                        placeholder="Cool Project Name"
                    />
                </div>
                <div class="mt-[18px]">
                    <label
                        for="required-service"
                        class="block text-sm text-[#747785] mb-2"
                        >Required Services</label
                    >
                    <!-- <MultiSelect /> -->
                    <MultiSelect
                        options={servicesOptions}
                        name="selected-services"
                        placeholder="Select required services..."
                    />
                </div>
                <div class="mt-[18px]">
                    <label
                        for="message"
                        class="block text-sm text-[#747785] mb-2">Message</label
                    >
                    <textarea
                        id="message"
                        rows="3"
                        class="text-white min-h-20 text-[18px] py-5 px-6 block w-full bg-transparent border border-white border-opacity-10 rounded-2xl focus:border-primary focus:ring-primary focus:ring-2 disabled:opacity-50 disabled:pointer-events-none outline-none leading-7"
                        placeholder="Cool Project Name"></textarea>
                </div>
                <div class="mt-[18px]">
                    <label
                        for="message"
                        class="block text-sm text-[#747785] mb-2"
                        >Budget Range</label
                    >
                    <RangeSlider />
                </div>
                <button
                    type="submit"
                    class="bg-primary outline-white w-full rounded-full mt-[50px] hover:bg-opacity-50 transition duration-300 font-neuropolitcal text-[20px] py-5 text-white text-center"
                    >Submit</button
                >
            </form>
        </div>
    </div>
</section>
